! XFT
Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.rgba:       rgb
! hintslight | hintsmedium | hintsfull
! Xft.hintstyle:hintsmedium
! rgba subpixel hinting (for LCDs)
! Xft.rgba:     none

! on Debian
! sudo aptitude install dmz-cursor-theme
Xcursor*theme: Vanilla-DMZ-AA
Xcursor*size:  22

Emacs.FontBackend: xft
Emacs.font: DejaVu Sans Mono-10

! URxvt ressources
! Default is M-s, set a "dead" key
urxvt.searchable-scrollback:Thai_sarae
URxvt*termName:         rxvt-unicode
URxvt*font:             xft:DejaVu Sans Mono-10
URxvt*scrollBar:        false
URxvt*foreground:       #B0B0B0
! URxvt*background:       #0c0c0c
URxvt*background:       #131313
URxvt.urgentOnBell:     true
URxvt*pointerBlank:     true    !hide mouse pointer
URxvt.buffered:         true
URvt*saveLines:         3000
! urxvt*backgroundPixmap: /home/papin_g/.config/awesome/themes/perso/perso-background-blr.png;root
! urxvt*depth:            32
! urxvt*background:       rgba:1000/1000/1500/aaaa
! URxvt*fading:           15
! URxvt*fadeColor:        Blue
! URxvt*blurRadius:       20
! URxvt*shading:          75
! URxvt*tintColor:        Grey20
! URxvt*shading:          350
! URxvt.iconFile:         /usr/share/pixmaps/rxvt-unicode.png
! rxvt*inheritPixmap:     true

! Change background attributes on fly keyboard
! urxvt*keysym.C-1:           command:\033]20;/home/papin_g/.config/awesome/themes/perso/perso-background-blr2.png;root\007
! urxvt*keysym.C-1:         command:\033]705;Grey10\007\033]50;xft:DejaVu Sans Mono-10\007
! urxvt*keysym.C-1:         command:\033]705;Grey10\007\033]50;xft:DejaVu Sans Mono-10:bold\007
! urxvt*keysym.C-2:           command:\033]20;/home/papin_g/.config/awesome/themes/perso/perso-background-blr.png;root\007
urxvt*keysym.C-3:       command:\033]705;Grey30\007
urxvt*keysym.C-4:       command:\033]705;Grey70\007

! Xterm resources
XTerm*termName:         xterm
! XTerm*background:       black
XTerm*background:       #131313
XTerm*foreground:       white
XTerm*scrollBar:        false
XTerm*scrollKey:        true
XTerm*faceName:         DejaVu Sans Mono !Inconsolata
XTerm*faceSize:         10
XTerm*saveLines:        3000
!XTerm*eightBitInput:    true
!XTerm*altSendsEscape:   true
!Xterm*utf8:            1
XTerm*metaSendsEscape:  true
XTerm*eightBitInput:    false
XTerm*locale:           true
XTerm*highlightSelection:true
! XTerm*pointerColorBackground: black
! sent urgent message to WM
XTerm*bellIsUrgent:     true
